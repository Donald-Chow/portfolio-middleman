<!doctype html>
<html>
  <head>
    <title><%= current_page.data.title || "Donald Chow | Portfolio" %></title>
    <meta name="description" content="This is Donald Chow's Web Developer Portfolio">
    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="Donald Chow | Portfolio" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="THE_URL_OF_MY_PORTFOLIO" />
    <meta property="og:image" content="<%= image_path 'MY_OG_IMAGE_WITH_RIGHT_SIZE.png' %>" />
    <meta property="og:description" content="This is Donald Chow's Web Developer Portfolio" />
    <meta property="og:site_name" content="Donald Chow | PortfolioE" />
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@twitter_handle">
    <meta name="twitter:title" content="Donald Chow | PortfolioE">
    <meta name="twitter:description" content="This is Donald Chow's Web Developer Portfolio">
    <meta name="twitter:creator" content="@twitter_handle">
    <meta name="twitter:image:src" content="<%= image_path 'MY_OG_IMAGE_WITH_RIGHT_SIZE.png' %>">

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Portfolio" %></title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VFWQH2YZPY"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-VFWQH2YZPY');
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
    </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <h2>Le Wagon Workshop - API for Beginners</h2>
      </div>
    </div>
    <div class='container'>
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active"data-bs-interval="10000">
            <img src="https://secure.meetupstatic.com/photos/event/9/6/0/c/600_516278412.webp?w=384" class="d-block w-100" alt="API Workshop">
          </div>
          <div class="carousel-item"data-bs-interval="10000">
            <a href="https://tinyurl.com/lw-api-ws">
              <img src="<%= image_path "api_workshop/workshop_portal.png" %>" class="d-block w-100" alt="Workshop Portal">
            </a>
          </div>
          <div class="carousel-item" data-bs-interval="10000">
            <img src="<%= image_path "api_workshop/free_workshop.png" %>" class="d-block w-100" alt="free workshop">
            <a href="https://info.lewagon.com/programming-for-everybody-tokyo">
              <div class="call-to-action"> <i class="fa-solid fa-link"></i> Sign up now</div>
            </a>
          </div>
          <div class="carousel-item"data-bs-interval="10000">
            <a href="https://tinyurl.com/lw-api-ws">
              <img src="<%= image_path "api_workshop/workshop_portal.png" %>" class="d-block w-100" alt="Workshop Portal">
            </a>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="footer">
      <div class="footer-links">
        <a href="https://www.lewagon.com/tokyo"><i class="fa-solid fa-globe"></i></a>
        <a href="https://www.instagram.com/lewagontokyo"><i class="fab fa-instagram"></i></a>
        <a href="https://www.linkedin.com/showcase/le-wagon-tokyo"><i class="fab fa-linkedin"></i></a>
        <a href="https://meetings.hubspot.com/sylvain-pierre"><div class="btn btn-danger">Join Bootcamp</div></a>
        <a href="https://info.lewagon.com/programming-for-everybody-tokyo"><div class="btn btn-danger">FREE COURSE</div></a>
      </div>
      <div class="footer-copyright">
        <i class="fas fa-heart"></i> Le Wagon
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
  <style>
    .call-to-action {
      position:absolute;
      left: 170px;
      bottom: 10px;
      background-color: beige;
      border-radius: 20px;
      width: 30%;
      font-size: 32px;
      font-weight: 700;
      padding: 16px;
      color: red;
      z-index:1;
    }
    .navbar-lewagon {
      justify-content: space-between;
      background: white;
    }

    .navbar-lewagon .navbar-collapse {
      flex-grow: 0;
    }

    .navbar-lewagon .navbar-brand img {
      width: 40px;
    }

    .footer {
      background: #F4F4F4;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 100px;
      padding: 0px 50px;
      color: rgba(0,0,0,0.3);
    }
    .footer-links {
      display: flex;
      align-items: center;
    }
    .footer-links a {
      color: black;
      opacity: 0.15;
      text-decoration: none;
      font-size: 24px;
      padding: 0px 10px;
    }
    .footer-links a:hover {
      opacity: 1;
    }
    .footer .fa-heart {
      color: #D23333;
    }

  </style>
</html>
